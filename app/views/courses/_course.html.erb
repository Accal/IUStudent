<div class="col-md-4">
  <div class="card card-responsive text-center mb-4">
    <div class="card-body">
      <h4 class="card-title">
        <%= link_to course.name, course_path(course)%>
      </h4>

      <h6 class="card-subtitle mb-2 text-muted">
        <%=course.code%>, <%=course.instructor%>
      </h6>

      <p class="card-text">
        <%=course.period1 unless course.period1.nil? %>
      </p>

      <p class="card-text">
        <%=course.period2 unless course.period2.nil?%>
      </p>

      <p class="card-text">
        <%=course.venue%>
      </p>

      <div class="d-flex justify-content-center">
        <div class="btn-group">
            <%= link_to  "Edit", edit_course_path(course), class: 'btn btn-sm btn-outline-secondary'%>
            <%= link_to  "Delete", course_path(course), method: :delete, class: 'btn btn-sm btn-outline-secondary', data: {confirm: "Are you sure?"} %>

            <%= link_to  "Add Course", add_course_student_path(current_student, course_code: "#{course.code}"), method: :post, class: 'btn btn-sm btn-outline-secondary' if student_signed_in? %>
            <%= link_to  "Teach Course", add_course_professor_path(current_professor, course_code: "#{course.code}"), method: :post, class: 'btn btn-sm btn-outline-secondary' if professor_signed_in? %>
        </div>
      </div>
    </div>
  </div>
</div>